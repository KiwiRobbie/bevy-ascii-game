    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'main'",
            "cargo": {
                "args": [
                    "build",
                ],
                "filter": {
                    "name": "bevy-ascii-game",
                    "kind": "bin"
                }
            },
            "args": ["--features", "bevy/file_watcher"],
            "cwd": "${workspaceFolder}",
            "env": {
                "LD_LIBRARY_PATH": "${workspaceFolder}/target/debug/deps:/home/kiwi/.rustup/toolchains/nightly-x86_64-unknown-linux-gnu/lib:$LD_LIBRARY_PATH",
                "CARGO_MANIFEST_DIR":"${workspaceFolder}"
            }
        },
       
        
    ]
}
